# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Model Configuration
# Options: gpt-5.2, gemini-3-pro-preview, gemini-3-flash-preview
LLM_MODEL=gpt-5.2
OPENAI_MODEL=gpt-5.2
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta

# Reasoning effort for gpt-5.2 (required for reasoning capabilities)
# Options: low, medium, high
# - low: Fast, minimal reasoning
# - medium: Balanced (recommended)
# - high: Maximum reasoning, slower but more thorough
OPENAI_REASONING_EFFORT=medium

# Server Configuration (for API mode)
PORT=3000
HOST=localhost

# Zuora API Configuration (for direct API calls)
ZUORA_BASE_URL=https://rest.test.zuora.com
ZUORA_CLIENT_ID=your_zuora_client_id
ZUORA_CLIENT_SECRET=your_zuora_client_secret

# Zuora MCP Server (optional - for LLM-to-Zuora integration)
# Set this to your MCP server URL for direct LLM-to-Zuora integration
# OpenAI supports HTTP or SSE endpoints; Gemini requires HTTP/Streamable HTTP.
# ZUORA_MCP_SERVER_URL=http://localhost:8080/mcp
# ZUORA_MCP_SERVER_URL=https://your-mcp-server.onrender.com/sse

# Optional: Enable debug logging
DEBUG=false

# Optional: Max retries for API calls
MAX_RETRIES=3
