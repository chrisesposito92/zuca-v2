{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@zuca/types": [
        "../../src/types/index.ts"
      ],
      "@zuca/types/*": [
        "../../src/types/*"
      ],
      "@zuca/pipeline": [
        "../../src/pipeline/index.ts"
      ],
      "@zuca/pipeline/*": [
        "../../src/pipeline/*"
      ],
      "@zuca/pipeline-agents": [
        "../../src/pipeline-agents/index.ts"
      ],
      "@zuca/pipeline-agents/*": [
        "../../src/pipeline-agents/*"
      ]
    },
    "baseUrl": ".",
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
