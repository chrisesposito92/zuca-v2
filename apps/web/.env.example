# Database (Vercel Postgres)
# Get this from your Vercel project settings
POSTGRES_URL="postgres://..."

# Authentication
# Generate a secure random string for production (min 32 chars)
JWT_SECRET="your-super-secret-jwt-key-change-this"

# Shared password for simple auth
# Users can log in with this password without an invite code
ZUCA_PASSWORD="your-shared-password"

# LLMs (pipeline processing)
OPENAI_API_KEY="sk-..."
GEMINI_API_KEY="your-gemini-api-key"
LLM_MODEL="gpt-5.2" # gpt-5.2 | gemini-3-pro-preview | gemini-3-flash-preview
OPENAI_MODEL="gpt-5.2"
GEMINI_BASE_URL="https://generativelanguage.googleapis.com/v1beta"

# GitHub Integration (for bug reporting)
# Create a personal access token at https://github.com/settings/tokens
# Token needs 'repo' scope to create issues
GITHUB_TOKEN="ghp_..."
GITHUB_OWNER="your-org"
GITHUB_REPO="zuca-v2"

# Optional: Zuora MCP Server
ZUORA_MCP_SERVER_URL="https://zuora-mcp-on-render.onrender.com/sse"
