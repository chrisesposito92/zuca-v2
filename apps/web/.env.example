# Debug mode
# DEBUG=true

# Authentication
# Generate a secure random string for production (min 32 chars)
JWT_SECRET="your-super-secret-jwt-key-change-this"
ZUCA_PASSWORD="your-shared-password"

# Revenue Snapshot - Encryption key for OAuth client secrets
# 64-char hex string for AES-256-GCM encryption
ZUORA_CREDENTIALS_KEY="your-64-char-hex-encryption-key"

# Database (Vercel Postgres / Neon)
# Leave commented out for mock mode in local dev
# POSTGRES_URL="postgresql://..."
# POSTGRES_URL_NON_POOLING="postgresql://..."
# DATABASE_URL="postgresql://..."

# LLM Configuration
OPENAI_API_KEY="sk-..."
GEMINI_API_KEY="your-gemini-api-key"

# Default model for API routes (used when no model specified)
# Options: gpt-5.2 | gemini-3.1-pro-preview | gemini-3-flash-preview
LLM_MODEL="gpt-5.2"

# Default model pre-selected in UI dropdowns (client-side)
# Must use NEXT_PUBLIC_ prefix to be accessible in browser
NEXT_PUBLIC_DEFAULT_MODEL="gpt-5.2"

# GitHub Integration (for bug reporting)
# Create a personal access token at https://github.com/settings/tokens
# Token needs 'repo' scope to create issues
GITHUB_TOKEN="ghp_..."
GITHUB_OWNER="your-org"
GITHUB_REPO="zuca-v2"

# Optional: Zuora MCP Server
ZUORA_MCP_SERVER_URL="https://zuora-mcp-on-render.onrender.com/sse"

# Self-learning backends (requires POSTGRES_URL)
# USE_POSTGRES_CORRECTIONS=true
# USE_POSTGRES_SUGGESTIONS=true

# Email (password reset)
# RESEND_API_KEY="re_..."
# EMAIL_FROM="ZUCA <you@example.com>"
# NEXT_PUBLIC_APP_URL="http://localhost:3000"
# SKIP_RESET_EMAIL=true

# Pipeline engine
# Set to "true" to use OpenAI Agent SDK pipeline instead of default
# USE_AGENTS_PIPELINE=true
