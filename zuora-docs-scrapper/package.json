{
  "name": "zuora-docs-scrapper",
  "version": "1.0.0",
  "description": "Scraper for Zuora documentation (docs.zuora.com and developer.zuora.com)",
  "type": "module",
  "scripts": {
    "scrape": "npx tsx src/index.ts",
    "scrape:force": "npx tsx src/index.ts --force",
    "scrape:billing": "npx tsx src/index.ts --product billing",
    "scrape:platform": "npx tsx src/index.ts --product platform",
    "scrape:revenue": "npx tsx src/index.ts --product revenue",
    "scrape:developer": "npx tsx src/index.ts --product developer",
    "test": "npx tsx src/index.ts --test",
    "test:developer": "npx tsx src/index.ts --product developer --test",
    "qa:generate": "npx tsx src/qa-generator.ts",
    "qa:generate:billing": "npx tsx src/qa-generator.ts --product billing",
    "qa:generate:platform": "npx tsx src/qa-generator.ts --product platform",
    "qa:generate:revenue": "npx tsx src/qa-generator.ts --product revenue",
    "qa:generate:developer": "npx tsx src/qa-generator.ts --product developer",
    "qa:resume": "npx tsx src/qa-generator.ts --resume",
    "qa:test": "npx tsx src/qa-generator.ts --test"
  },
  "dependencies": {
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.5",
    "openai": "^4.70.0",
    "puppeteer": "^23.0.0",
    "turndown": "^7.2.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/turndown": "^5.0.5",
    "@types/xml2js": "^0.4.14",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  }
}
