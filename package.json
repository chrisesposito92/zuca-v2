{
  "name": "zuca-v2",
  "version": "1.0.0",
  "private": true,
  "description": "Zuora Use Case Architect - Generate complete Zuora billing and revenue solutions from customer use cases",
  "workspaces": [
    "apps/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/api/server.ts",
    "dev:web": "npm run dev -w apps/web",
    "build": "tsc",
    "build:web": "npm run build -w apps/web",
    "start": "node dist/index.js",
    "cli": "tsx src/cli/index.ts",
    "server": "tsx src/api/server.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "rag:build": "tsx src/rag/cli.ts build",
    "rag:build:resume": "tsx src/rag/cli.ts build --resume",
    "rag:repair": "tsx src/rag/cli.ts repair",
    "rag:test": "tsx src/rag/cli.ts test",
    "rag:stats": "tsx src/rag/cli.ts stats"
  },
  "keywords": [
    "zuora",
    "billing",
    "revenue",
    "openai",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "openai": "^6.15.0",
    "uuid": "^10.0.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.9.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
